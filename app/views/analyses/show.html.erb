                  </div>
                <% elsif @analysis.identification.score > 16.66 %>
                  <div class="orange score round" style="background-image: url('<%= asset_path "orange-medal.png"  %>');">
                  </div>
                <% else %>
                  <div class="red score round" style="background-image: url('<%= asset_path "red-medal.png"  %>');">
                  </div>
                <% end %>
              <% else %>
                <div class="red score round" style="background-image: url('<%= asset_path "red-medal.png"  %>');"></div>
              <% end %>

            </div>
            <div class="col-xs-9 text-center analyses-header">
              <p>Mentions Légales</p>
              <p><%= @analysis.identification_url != "" ? @analysis.identification.score.to_i : "0" %>/50</p>
            </div>
          </button>
