<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 90%, rgba(0, 0, 0, 0.5) 90%), url('<%= asset_path "banner-home-photo.jpg"  %>');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form-login">
          <h2>Connexion</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false, label: "Mot de passe" %>
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Valider" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
